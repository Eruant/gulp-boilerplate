{
  "scripts": {
    "src": {
      "root": "./src/js/base.js",
      "all": "./src/js/**/*.js"
    },
    "dest": {
      "bundle": "bundle.min.js",
      "all": "./build/js"
    }
  },
  "styles": {
    "config": "./src/config.rb",
    "src": {
      "root": "./src/scss"
    },
    "dest": {
      "bundle": "./build/css"
    }
  },
  "markup": {
    "src": {
      "all": "./src/html/*.html"
    },
    "dest": {
      "all": "./build"
    }
  },
  "assets": {
    "img": {
      "src": {
        "all": "./src/img/**/*"
      },
      "dest": {
        "all": "./build/img"
      }
    }
  }
}
